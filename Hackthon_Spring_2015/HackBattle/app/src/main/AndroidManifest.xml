<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shashi.hackbattle" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name=".dashboard"
            android:label="@string/title_activity_dashboard" >
        </activity>
        <activity
            android:name=".Register_Activity"
            android:label="@string/title_activity_register_" >
        </activity>
        <activity
            android:name=".Videosearch"
            android:label="@string/title_activity_videosearch" >
        </activity>
        <activity
            android:name=".Mostpopular"
            android:label="@string/title_activity_mostpopular" >
        </activity>
        <activity
            android:name=".ForgotPassword"
            android:label="@string/title_activity_forgot_password" >
        </activity>
    </application>

</manifest>
